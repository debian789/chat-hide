html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed, 
figure, figcaption, footer, header, hgroup, 
menu, nav, output, ruby, section, summary,
time, mark, audio, video
  margin 0
  padding 0
  border 0
  font-size 100%
  font inherit
  vertical-align baseline

article, aside, details, figcaption, figure, 
footer, header, hgroup, menu, nav, section
  display block

body
  line-height 1
  background #222222

ol, ul
  list-style none

blockquote, q
  quotes none

blockquote:before, blockquote:after,
q:before, q:after
  content ''
  content none

table
  border-collapse collapse
  border-spacing 0

footer
  width 100%
  position absolute
  bottom 0
  text-align center
  color white
  a
    color white

.titulo
  text-align center
  font-size 2em
  color white
  margin-top 1em

.salir
  position relative
  width 50%
  margin auto
  text-align right
  display block
  color #000
  left -0.8em
  right 0
  clear both
  z-index 1003
  margin-top 0.3em

.btnPanic 
  width: 25%;
  height: 7em;
  position: fixed;
  z-index: 1000;
  top: 0;
  background: #ccc;
  opacity: 0.3

.imgMessage
  width: 100%

.video 
  video 
    width: 100%
  .video-controls
    .video-play
      display: block;
      width: 30px;
      height: 27px;
    .video-time
      display: none
      span 
        display: inline-block
      .video-time__current
        display: none
    .video-mute
      display: none
    .video-seek
      .video-progress-bar
        input 
          width:100%
    .video-fullscreen
      position: absolute
      left: 0


.itemListChat
  padding 0.3em 1em 0.3em 1em
  border-radius 5px
  background white
  margin-bottom 0.5em
  width 80%
  text-align right
  margin-left auto

  span
    display block
    color #ccc
    text-align left

.itemListChat2
  padding 0.3em 1em 0.3em 1em
  border-radius 5px 5px 5px 5px
  background #ccc
  margin-bottom 0.5em
  width 80%
  text-align left
  margin-right auto
  span
    display block
    color #efefef
    text-align right

.contenedorChant 
  display: flex;
  border: 0px solid blue;
  background: #fff;
  position: absolute 
  top 0
  bottom: 0
  left 0
  right: 0
  width: 100%
  height: 100%
  .cuadroChat
    position: absolute
    top 0
    bottom: 0
    left 0
    right: 0
    height: 100%
    overflow scroll
    overflow-x: hidden
    margin auto
    border 1px solid #eee
    width 50%
    display: flex;
    flex-direction: column-reverse;
    min-height 70%
    background #eee// #3C3C3C
    .panelListChat
      bottom 3.2em
      left 1em
      padding-left 10px
      padding-right: 10px
      right 1em
      color #222
      margin-bottom: 40px
      background: #eee;

    .inputChat
      position: fixed
      width:  50%
      display: inline-block
      input:hover
        border 0px solid blue
      input:focus 
        border 0px solid red 
        box-shadow: none
        outline: none;
      input
        padding 0 
        width 88%
        height: 40px
        bottom 0
        margin: 0
        border 0
        float: left
        text-align: left
        padding-left: 2%
        box-shadow: none
        font-family: sans-serif;
        font-size: 18px;
        appearance: none;
        box-shadow: none;
        border-radius: none;
        line-height 3em
      button:hover 
        border 0
      button:focus
        border 0
        outline: none;

      button
        color #4A8BFF
        padding 0
        font-size: 30px
        float: right
        right:  0
        height: 40px
        width 10%
        border 0
        background: #fff
.inicioSession
  border 1px solid white
  border-radius 5px
  background #3C3C3C
  width 30%
  margin 2em auto
  padding 3em
  input[type=text]
    width 76%
    display inline-block
    padding 0 0 0 4%
    border 0
    line-height 3em
  button
    display inline-block
    width 20%
    border 0
    line-height 3em
    padding 0
  .validacionName
    display block
    margin-top 0.5em
    color: white
    


@media all and (max-width: 700px)
  .contenedorChant
    .cuadroChat
      width 90%
      .inputChat
        width 90%
        input 
          width 80%
        button 
          width: 18%
  .salir
    width 90%
  .titulo
    font-size 25px
    width 100%
  .inicioSession
    width 80%
    padding 5%
    input[type=text]
      width 62%
    button
      width 30%

